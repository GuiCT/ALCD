{
"version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Manim File",
            "type": "debugpy",
            "request": "launch",
            "module": "manim",
            "args": ["${file}", "-pql", "--renderer=opengl"],
            "console": "integratedTerminal"
        },
        {
            "name": "ManimGL: Render Scene (Debug)",
            "type": "debugpy",
            "request": "launch",
            "module": "manimlib",
            "args": [
                "${workspaceFolder}/presentationgl.py",
                "KernelPCAOverview"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}